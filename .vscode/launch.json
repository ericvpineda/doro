// Note: Resource: https://jestjs.io/docs/troubleshooting
{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Jest Tests",
        "type": "node",
        "request": "launch",
        "runtimeArgs": [
          "--inspect-brk",
          "${workspaceRoot}/node_modules/jest/bin/jest.js",
          "--runInBand"
        ],
        "skipFiles": [
            "<node_internals>/**"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "outFiles": [
            "${workspaceFolder}/**/*.js"
        ]
      }
    ]
  }