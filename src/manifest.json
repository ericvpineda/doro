{
    "name": "Doro",
    "version": "1.0.1",
    "description": "Pomodoro Timer.",
    "manifest_version": 3,
    "icons": {
        "16": "./img/doro_logo.png", 
        "48": "./img/doro_logo.png", 
        "128": "./img/doro_logo.png"
    },
    "author": "Eric Pineda",
    "action": {
        "default_title": "Doro",
        "default_popup": "index.html"
    }, 
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["storage", "alarms", "notifications"]
}