{
    "name": "Doro - Pomodoro with Spotify Player",
    "version": "1.0.0",
    "description": "Pomodoro with spotify integration extension.",
    "manifest_version": 3,
    "author": "Eric Pineda",
    "action": {
        "default_title": "Doro",
        "default_popup": "index.html"
    }, 
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["storage", "alarms", "identity"],
    "host_permissions": ["https://accounts.spotify.com/*"]
}